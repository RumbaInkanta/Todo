#:kivy 2.2.1
MDBoxLayout:
    MDBoxLayout:
        size_hint: .35, 1
        orientation: "vertical"
        padding: 10
        MDTextField:
            id: new_project_title
            multiline: False
            hint_text: "Добавить проект"
            on_text_validate: app.on_new_project()
            icon_left: "folder"
        MDScrollView:
            MDList:
                id: projects
    MDBoxLayout:
        size_hint: .65, 1
        orientation: "vertical"
        MDBoxLayout:
            size_hint: 1, .1
            MDTextField:
                id: new_task_title
                hint_text: "Добавить задачу"
                multiline: False
                icon_left: "checkbox-marked-circle-plus-outline"
                on_text_validate: app.on_new_task()
            MDIconButton:
                icon: "plus"
                pos_hint: {"center_x": .5, "center_y": .5}
        MDBoxLayout:
            size_hint: 1, .9
            MDScrollView:
                MDList:
                    id: tasks
