#:kivy 2.2.1
MDBoxLayout:
    MDBoxLayout:
        size_hint: .35, 1
        MDTextField:
            id: new_project_title
            multiline: False
            hint_text: "Добавить проект"
            on_text_validate: app.on_new_project()
        MDScrollView:
            MDList:
                id: projects
    MDBoxLayout:
        size_hint: .65, 1
        orientation: "vertical"
        MDBoxLayout:
            
            MDTextField:
                id: new_task_title
                hint_text: "Добавить задачу"
                multiline: False
                on_text_validate: app.on_new_task()
            MDIconButton:
                icon: "plus"
                pos_hint: {"center_x": .5, "center_y": .5}
        MDScrollView:
            MDList:
                id: tasks
