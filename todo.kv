#:kivy 2.2.1
MDBoxLayout:
    orientation: 'vertical'
    MDBoxLayout:
        size_hint: 1, .1        
        MDBoxLayout:
            size_hint: .35, 1
            padding: [10, 5, 5, 0]
            MDTextField:
                id: new_project_title
                multiline: False
                icon_left: "folder"
                hint_text: "Добавить проект"
                on_text_validate: app.on_new_project()

        MDBoxLayout:
            size_hint: .65, 1
            padding: [5, 5, 5, 0]
            MDBoxLayout:
                MDTextField:
                    id: new_task_title
                    hint_text: "Добавить задачу"
                    multiline: True
                    icon_left: "checkbox-marked-circle-plus-outline"
                    disabled: True
                MDIconButton:
                    id: new_task_button
                    icon: "plus"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press: app.on_new_task()
                    disabled: True
    MDBoxLayout:
        size_hint: 1, .9
        MDBoxLayout:
            size_hint: .35, 1
            MDScrollView:
                MDList:
                    id: projects
        MDBoxLayout:
            size_hint: .65, 1
            MDScrollView:
                MDList:
                    id: tasks
                    