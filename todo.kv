#:kivy 2.2.1
<TaskListItem>
    orientation: 'horizontal'
    size_hint_y: None
    height: '72dp'
ScreenManager:
    MainScreen:
        name: 'main'
    TaskEditScreen:
        name: 'task_edit'

<MainScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            size_hint: 1, .1        
            MDBoxLayout:
                size_hint: .3, 1
                padding: [10, 5, 5, 0]
                MDTextField:
                    id: new_project_title
                    multiline: False
                    icon_left: 'folder'
                    hint_text: "Добавить проект"
                    on_text_validate: root.on_new_project()
                MDIconButton:
                    id: new_project_button
                    icon: 'plus'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_press: root.on_new_project()
                    disabled: False
            MDBoxLayout:
                size_hint: .7, 1
                padding: [5, 5, 5, 0]
                MDBoxLayout:
                    MDTextField:
                        id: new_task_title
                        hint_text: "Добавить задачу"
                        multiline: True
                        icon_left: 'checkbox-marked-circle-plus-outline'
                        disabled: True
                        multiline: True
                        on_text_validate: root.on_new_task()
                    MDIconButton:
                        id: new_task_button
                        icon: 'plus'
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        on_press: root.on_new_task()
                        disabled: True
        MDBoxLayout:
            size_hint: 1, .8
            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .3, 1
                MDScrollView:
                    size_hint_y: 0.8
                    MDList:
                        id: projects
                MDScrollView:
                    size_hint_y: 0.2
                    MDList:
                        id: dynamic_projects
                        

            MDBoxLayout:
                size_hint: .7, 1
                MDScrollView:
                    MDList:
                        id: tasks
        MDBoxLayout:
            size_hint: 1, .1
            MDLabel:
                id: datetime_label
                padding: 10
                size_hint_y: None
                height: 50
                theme_text_color: 'Secondary'

<TaskEditScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout: 
            padding: 10
            size_hint: 1, .1        
            MDRoundFlatIconButton:
                icon: 'arrow-left'
                pos_hint: {'x': 0, 'top': 1}
                text: 'Назад'
                on_press: root.cancel_click()
            MDLabel:
                halign: 'center'
                text: "Изменить задачу"
        MDBoxLayout:
            padding: 30
            orientation: 'vertical'
            size_hint: 1, .9
            MDTextField:
                id: edit_task_title
                hint_text: 'Название'
                multiline: False
                size_hint: 1, .2
            MDTextField:
                id: edit_task_description
                hint_text: 'Описание'
                multiline: True
                size_hint: 1, .4
            MDBoxLayout:
                size_hint: 1, .4
                spacing: dp(10)
                MDTextField:
                    id: edit_task_due_date
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    hint_text: "Дата выполнения"
                    multiline: False
                    size_hint_x: None
                MDRoundFlatIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint_x: None
                    icon: 'calendar'
                    text: "Изменить дату"
                    on_release: root.show_date_picker()
            MDBoxLayout:
                size_hint: 1, .2
                padding: 10
                MDRoundFlatIconButton:
                    size_hint: .4, 1
                    icon: 'delete'
                    text: "Удалить задачу"
                    on_release: root.show_confirmation_dialog()
                MDBoxLayout:
                    size_hint: .2, 1                    
                MDFillRoundFlatIconButton:
                    size_hint: .4, 1
                    icon: 'check-bold'
                    text: 'Изменить задачу'
                    on_press: root.change_task()